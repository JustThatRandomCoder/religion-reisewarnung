---
const { title, subtitle, date } = Astro.props;
---

<div class="page-title-section">
  <h1>{title}</h1>
  <h2 class="subtitle">{subtitle}</h2>
  <div class="date-info">{date}</div>
</div>

<style>
  .page-title-section {
    margin-bottom: 32px;
    text-align: left;
  }

  .page-title-section h1 {
    font-family: "Mulish", sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 8px;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .page-title-section .subtitle {
    font-family: "Mulish", sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d3748;
    margin: 0 0 16px 0;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  .date-info {
    font-family: "Mulish", sans-serif;
    font-size: 0.875rem;
    color: #718096;
    font-style: italic;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .page-title-section {
      margin-bottom: 24px;
    }

    .page-title-section h1 {
      font-size: 1.75rem;
    }

    .page-title-section .subtitle {
      font-size: 1.375rem;
    }

    .date-info {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .page-title-section {
      margin-bottom: 20px;
    }

    .page-title-section h1 {
      font-size: 1.5rem;
      line-height: 1.3;
    }

    .page-title-section .subtitle {
      font-size: 1.25rem;
      margin-bottom: 12px;
    }

    .date-info {
      font-size: 0.8rem;
    }
  }
</style>
