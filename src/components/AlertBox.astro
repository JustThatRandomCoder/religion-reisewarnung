---
const { title } = Astro.props;
---

<div class="alert-box">
  <h3 class="alert-title">{title}</h3>
  <div class="alert-content">
    <slot />
  </div>
</div>

<style>
  .alert-box {
    background: #fff5f5;
        border-left: 4px solid #d73a49;
        padding: 16px 20px;
        margin: 24px 0;
        border: 1px solid #fecdcd;
    }

    .alert-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #000000;
        margin: 0 0 12px 0;
        line-height: 1.3;
    }

    .alert-content {
        color: #333333;
        line-height: 1.5;
    }

    .alert-content p {
        font-size: 1rem;
        margin-bottom: 12px;
        line-height: 1.5;
    }

    .alert-content p:last-child {
        margin-bottom: 0;
    }

    .alert-content strong {
        font-weight: 600;
        color: #000000;
    }

    @media (max-width: 768px) {
        .alert-box {
            padding: 12px 16px;
            margin: 20px 0;
        }

        .alert-title {
            font-size: 1.1rem;
        }

        .alert-content p {
            font-size: 0.9rem;
        }
