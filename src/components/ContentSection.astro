---
const { title } = Astro.props;
---

<section class="content-section">
  <h2 class="section-title">{title}</h2>
  <div class="section-content">
    <slot />
  </div>
</section>

<style>
  .content-section {
    margin-bottom: 48px;
    padding: 0;
  }

  .section-title {
    font-family: "Mulish", sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d3748;
    margin: 0 0 20px 0;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  .section-content {
    color: #4a5568;
    line-height: 1.7;
  }

  .section-content p {
    font-family: "Playfair Display", serif;
    font-size: 1rem;
    margin-bottom: 16px;
    line-height: 1.7;
  }

  .section-content p:last-child {
    margin-bottom: 0;
  }

  .section-content ul {
    margin: 16px 0;
    padding-left: 0;
  }

  .section-content li {
    font-family: "Playfair Display", serif;
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.7;
    margin-bottom: 8px;
    padding-left: 20px;
    position: relative;
  }

  .section-content li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: #667eea;
    font-weight: bold;
  }

  .section-content h4 {
    font-family: "Mulish", sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: #2d3748;
    margin: 24px 0 12px 0;
    line-height: 1.3;
  }

  .section-content strong {
    font-weight: 600;
    color: #1a202c;
  }

  .section-content em {
    font-style: italic;
    color: #718096;
  }

  @media (max-width: 768px) {
    .content-section {
      margin-bottom: 32px;
    }

    .section-title {
      font-size: 1.375rem;
      margin-bottom: 16px;
    }

    .section-content p {
      font-size: 1rem;
      margin-bottom: 14px;
      line-height: 1.6;
    }

    .section-content li {
      font-size: 1rem;
      padding-left: 18px;
      margin-bottom: 6px;
      line-height: 1.6;
    }

    .section-content h4 {
      font-size: 1.05rem;
      margin: 20px 0 10px 0;
    }
  }

  @media (max-width: 480px) {
    .content-section {
      margin-bottom: 24px;
    }

    .section-title {
      font-size: 1.25rem;
      margin-bottom: 12px;
      line-height: 1.3;
    }

    .section-content p {
      font-size: 0.9rem;
      margin-bottom: 12px;
      line-height: 1.5;
    }

    .section-content li {
      font-size: 0.9rem;
      padding-left: 16px;
      margin-bottom: 4px;
      line-height: 1.5;
    }

    .section-content h4 {
      font-size: 1rem;
      margin: 16px 0 8px 0;
    }

    .section-content ul {
      margin: 12px 0;
    }
  }
</style>
